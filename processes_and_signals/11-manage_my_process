#!/usr/bin/env bash
# 11-manage_my_process init script
# Manages the manage_my_process script with start, stop, and restart options

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="./manage_my_process"  # Path to your manage_my_process script

start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
    else
        # Start manage_my_process in the background and save its PID
        $PROCESS_SCRIPT &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
    fi
}

stop() {
    if [ -f "$PID_FILE" ]; then
        # Kill the process and remove the PID file
        kill "$(cat $PID_FILE)"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running."
    fi
}

restart() {
    if [ -f "$PID_FILE" ]; then
        stop
        start
        echo "manage_my_process restarted"
    else
        start
        echo "manage_my_process started and restarted"
    fi
}

# Display usage message when no or invalid argument is provided
usage() {
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
}

# Main script logic to handle arguments
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        usage
        ;;
esac
